{
    "name": "taskboard-backend",
    "version": "1.0.0",
    "main": "dist/index.js",
    "type": "module",
    "engines": {
        "node": ">=18.0.0"
    },
    "scripts": {
        "dev": "nodemon",
        "dev:fast": "npx tsx watch index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "postinstall": "npm run build"
    },
    "nodemonConfig": {
        "watch": [
            "**/*.ts"
        ],
        "ext": "ts,json",
        "exec": "npx tsx index.ts"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/socket.io": "^3.0.1",
        "@types/uuid": "^10.0.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.21.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.0",
        "socket.io": "^4.8.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.19.4",
        "nodemon": "^3.0.2",
        "tsx": "^4.0.0",
        "typescript": "^5.0.2"
    }
}
